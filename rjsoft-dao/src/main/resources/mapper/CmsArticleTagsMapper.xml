<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rongji.rjsoft.mapper.CmsArticleTagsMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.rongji.rjsoft.entity.content.CmsArticleTags">
        <id column="article_id" property="articleId"/>
        <result column="tag_id" property="tagId"/>
    </resultMap>

    <insert id="batchInsert">
        insert into cms_article_tags (article_id, tag_id) values
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.articleId}, #{item.tagId})
        </foreach>
    </insert>

    <select id="getTagsByArticleId" parameterType="long" resultType="string">
        select t2.tag_name
        from cms_article_tags as t1
                 INNER JOIN cms_tags as t2 on t1.tag_id = t2.tag_id
        where t1.article_id = #{articleId}
    </select>

</mapper>
