<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rongji.rjsoft.mapper.SysDeptMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.rongji.rjsoft.entity.system.SysDept">
        <id column="dept_id" property="deptId"/>
        <result column="parent_id" property="parentId"/>
        <result column="ancestors" property="ancestors"/>
        <result column="dept_name" property="deptName"/>
        <result column="order_num" property="orderNum"/>
        <result column="leader" property="leader"/>
        <result column="phone" property="phone"/>
        <result column="email" property="email"/>
        <result column="status" property="status"/>
        <result column="del_flag" property="delFlag"/>
        <result column="create_by" property="createBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="update_time" property="updateTime"/>
        <result column="branch_code" property="branchCode"/>
        <result column="dept_type" property="deptType"/>
    </resultMap>

    <sql id="selectDeptVo">
        select dept_id,
               parent_id,
               ancestors,
               dept_name,
               order_num,
               leader,
               phone,
               email,
               create_time,
               branch_code,
               dept_type
        from sys_dept
    </sql>

    <select id="selectDeptIdSByDeptId" parameterType="long" resultType="long">
        SELECT t.dept_id
        FROM sys_dept t
        WHERE find_in_set(#{deptId}, ancestors)
          and status = 0
          and del_flag = 0
    </select>

    <select id="getAsynchDeptTreeByIds" parameterType="long"
            resultType="com.rongji.rjsoft.vo.system.dept.SysDeptTreeVo">
        select dept_id,
               parent_id,
               dept_name
        from sys_dept
        where parent_id = #{deptId}
          and status = 0
          and del_flag = 0
    </select>

    <select id="getSimpleAsynchTreeById" parameterType="long"
            resultType="com.rongji.rjsoft.vo.system.dept.SysDeptTreeVo">
        select dept_id,
               parent_id,
               dept_name
        from sys_dept
        where dept_id = #{deptId}
          and status = 0
          and del_flag = 0
    </select>

    <select id="listByCondition" parameterType="com.rongji.rjsoft.query.system.dept.DeptQuey"
            resultType="com.rongji.rjsoft.vo.system.dept.SysDeptVo">
        <include refid="selectDeptVo"/>
        <where>
            <if test="deptType > 0">
                dept_type = #{deptType}
            </if>
            <if test="null != status">
                status = #{status}
            </if>
            <if test="null != deptName and deptName != ''">
                dept_name like concat('%', #{deptName}, '%')
            </if>
        </where>
        order by dept_type, branch_code
    </select>

    <select id="selectChildrenByDeptId" parameterType="long" resultMap="BaseResultMap">
        select dept_id, ancestors
        from sys_dept
        where find_in_set(#{deptId}, ancestors)
    </select>

    <update id="batchUpdateChildreAncestors">
        update sys_dept set ancestors =
        <foreach collection="list" item="item" index="index" separator=" " open="case dept_id" close="end">
            when #{item.deptId} then #{item.ancestors}
        </foreach>
        where dept_id in
        <foreach collection="list" item="item" index="index" open="(" separator="," close=")">
            #{item.deptId}
        </foreach>
    </update>

    <select id="selectAllTreeNode" resultType="com.rongji.rjsoft.vo.system.dept.SysDeptAllTreeVo">
        select dept_id, dept_name, parent_id
        from sys_dept
        where find_in_set(#{deptId}, ancestors)
        order by parent_id
    </select>

    <select id="selectDeptsByIds" resultType="com.rongji.rjsoft.vo.system.dept.SysDeptTreeVo">
        select dept_id, dept_name, parent_id
        from sys_dept
        where dept_id in
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>

</mapper>
